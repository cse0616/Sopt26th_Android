<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv_logo"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sopt_logo"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="회원가입"/>

    <EditText
            android:id="@+id/et_email_register"
            android:background="@drawable/gray_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/tv_register"
            android:inputType="text"
            android:textSize="13dp"
            android:hint="이메일"/>
    <EditText
            android:id="@+id/et_password_register"
            android:background="@drawable/gray_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/et_email_register"
            android:inputType="textPassword"
            android:textSize="13dp"
            android:hint="비밀번호"/>
    <EditText
            android:id="@+id/et_password2"
            android:background="@drawable/gray_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/et_password_register"
            android:inputType="textPassword"
            android:textSize="13dp"
            android:hint="비밀번호 확인"/>
    <EditText
            android:id="@+id/et_nickname"
            android:background="@drawable/gray_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/et_password2"
            android:textSize="13dp"
            android:hint="GitHub 닉네임"/>
    <Button
            android:text="가입완료"
            android:textColor="#ffffff"
            android:background="@drawable/primary_border"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/et_nickname"
            android:layout_marginBottom="16dp"
            android:textSize="13dp"
            android:id="@+id/btn_register"/>
</RelativeLayout>